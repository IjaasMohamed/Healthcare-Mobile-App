<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueShade1"
    tools:context=".UserTipsDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCourseImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/course_hero_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivCourseImage"
            android:paddingHorizontal="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Course Title" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCourseTitle"
            android:padding="15dp"
            android:textColor="@color/white"
            tools:text="$25" />

        <TextView
            android:id="@+id/tvSuitedFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCourseTitle"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:textColor="@color/white"
            tools:text="Beginner" />

        <TextView
            android:id="@+id/tvCourseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrice"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Description" />


    </RelativeLayout>

</ScrollView>